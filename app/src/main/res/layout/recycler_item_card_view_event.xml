<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/cover_event"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title_event"
                style="@android:style/Widget.Holo.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cover_event"
                android:fontFamily="@font/open_sans"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Title"
                android:textAlignment="center"
                android:textColor="#444333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/date_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_event"
                android:layout_alignParentEnd="true"
                android:paddingEnd="8dp"
                android:text="Date"
                android:textColor="#666666"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/location_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_event"
                android:paddingStart="8dp"
                android:text="Location"
                android:textColor="#666666"
                android:textSize="16sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>